@model StudentMainModel

@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="container pos-relaive">

    <div class="cards">
        <div class="card text-white bg-dark mb-3 col-3">
            <div class="card-header text-center"><h5>Öğrenim Bilgileri</h5></div>
            <div class="card-body text-center">
                <p class="card-text">
                    @Html.DisplayFor(model => model.student.Faculty) <br>
                    @Html.DisplayFor(model => model.student.Department) <br>
                    @Html.DisplayFor(model => model.student.GradeLevel). Sınıf
                </p>
            </div>
        </div>

        <div class="card text-white bg-dark mb-3 col-3">
            <div class="card-header text-center"><h5>Danışman Bilgileri</h5></div>
            <div class="card-body text-center">
                <p class="card-text">
                    @Html.DisplayFor(model => model.advisor.Name)
                    @Html.DisplayFor(model => model.advisor.Surname) <br>
                    @Html.DisplayFor(model => model.advisor.Mail)@("@firat.edu.tr")
                </p>
            </div>
        </div>

        <div class="card text-white bg-dark mb-3 col-3">
            <div class="card-header text-center"><h5>Transkript Bilgileri</h5></div>
            <div class="card-body text-center d-grid">
                <p class="card-text">AGNO : @Html.DisplayFor(model => model.gradeInformation.TranscriptNote)</p>
                <a asp-action="TranscriptInformation" class="btn btn-primary">İncele</a>
            </div>
        </div>
    </div>

</div>
