@model AnnotationsStudentModel

@{
    Layout = "_AdminMainLayout";
}


<div id="back-to-div">
    <a asp-action="Index" class="btn btn-outline-dark m-4">Öğrenci Listesine Geri Dön</a>
</div>

<div id="student-create-area" class="container">
    <div>
        <h3 class="text-center noselect">Öğrenci Ekle</h3>
        <hr style="border: 3px solid #000;">
    </div>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mt-3">
            <label asp-for="StudentNo" class="control-label">Öğrenci No</label>
            <input asp-for="StudentNo" class="form-control" />
            <span asp-validation-for="StudentNo" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Name" class="control-label">Ad</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Surname" class="control-label">Soyad</label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Faculty" class="control-label">Fakülte</label>
            <input asp-for="Faculty" class="form-control" />
            <span asp-validation-for="Faculty" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Department" class="control-label">Bölüm</label>
            <input asp-for="Department" class="form-control" />
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="GradeLevel" class="control-label">Sınıf </label>
            <input asp-for="GradeLevel" class="form-control" />
            <span asp-validation-for="GradeLevel" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="AdvisorId" class="control-label">Danışman Id</label>
            <input asp-for="AdvisorId" class="form-control" />
            <span asp-validation-for="AdvisorId" class="text-danger"></span>
        </div>
        <div class="d-grid form-group mt-3">
            <button class="btn btn-success" type="submit">Kayıt Oluştur</button>
        </div>
    </form>
</div>

