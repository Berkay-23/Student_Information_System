@model AnnotationsLessonModel

@{
    Layout = "_AdminMainLayout";
}

<div id="back-to-div">
    <a asp-action="Index" class="btn btn-outline-dark m-4">Dersler Listesine Geri Dön</a>
</div>

<div id="student-create-area" class="container">
    <div>
        <h3 class="text-center noselect">Ders Bilgileri Güncelle</h3>
        <hr style="border: 3px solid #000;">
    </div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mt-3">
            <label class="control-label">Ders Id</label>
            <input readonly value="@Model.LessonId" class="form-control" asp-for="LessonId" />
        </div>
        <div class="form-group mt-3">
            <label asp-for="LessonName" class="control-label">Ders Adı</label>
            <input asp-for="LessonName" class="form-control" />
            <span asp-validation-for="LessonName" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="LessonCode" class="control-label">Ders Kodu</label>
            <input asp-for="LessonCode" class="form-control" />
            <span asp-validation-for="LessonCode" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="LessonType" class="control-label">Ders Tipi</label>
            @if (Model.LessonType.Equals("Seçmeli"))
            {
                <select asp-for="LessonType" class="form-control">
                    <option selected value="Seçmeli">Seçmeli</option>
                    <option value="Zorunlu">Zorunlu</option>
                </select>
            }
            else
            {
                <select asp-for="LessonType" class="form-control">
                    <option value="Seçmeli">Seçmeli</option>
                    <option selected value="Zorunlu">Zorunlu</option>
                </select>
            }

        </div>
        <div class="form-group mt-3">
            <label asp-for="Ects" class="control-label">AKTS</label>
            <input asp-for="Ects" type="text" class="form-control" />
            <span asp-validation-for="Ects" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Credit" class="control-label">Kredi</label>
            <input asp-for="Credit" type="text" class="form-control" />
            <span asp-validation-for="Credit" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Semester" class="control-label">Dönem</label>
            @if (Model.LessonType.Equals("Bahar"))
            {
                <select asp-for="Semester" class="form-control">
                    <option selected value="Bahar">Bahar</option>
                    <option value="Güz">Güz</option>
                </select>
            }
            else
            {
                <select asp-for="Semester" class="form-control">
                    <option value="Bahar">Bahar</option>
                    <option selected value="Güz">Güz</option>
                </select>
            }
            <span asp-validation-for="Semester" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="GradeLevel" class="control-label">Sınıf</label>
            <input asp-for="GradeLevel" type="text" class="form-control" />
            <span asp-validation-for="GradeLevel" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="PraticalLimit" class="control-label">Pratik Devamsızlık Limiti</label>
            <input asp-for="PraticalLimit" type="text" class="form-control" />
            <span asp-validation-for="PraticalLimit" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="TheoreticalLimit" class="control-label">Teorik Devamsızlık Limiti</label>
            <input asp-for="TheoreticalLimit" type="text" class="form-control" />
            <span asp-validation-for="TheoreticalLimit" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="LecturerId" class="control-label">Eğitmen Id</label>
            <input asp-for="LecturerId" type="text" class="form-control" />
            <span asp-validation-for="LecturerId" class="text-danger"></span>
        </div>
        <div class="d-grid form-group mt-3 mb-3">
            <button class="btn btn-primary">Kaydet</button>
        </div>
    </form>

    <hr />

    <form asp-area="Admin" asp-controller="Lesson" asp-action="Delete" method="get">
        <div class="form-group mt-3">
            <label class="control-label">Ders Id</label>
            <input readonly type="text" name="lesson_id" class="form-control" value="@Model.LessonId"/>
        </div>

        <div class="d-grid form-group mt-3">
            <button asp-action="Delete" class="btn btn-danger">Dersi Sil</button>
        </div>

    </form>
</div>

